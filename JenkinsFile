pipeline {
  agent any
  stages {
    stage('Prep') {
      steps {
        sh 'molecule list'
        sh 'molecule lint'
      }
    }
    stage('Test') {
      steps {
        echo 'Testing...'
        sh 'sudo molecule create'
        sh 'sudo molecule converge'
        sh 'sudo molecule verify'
      }
    }
  }
}
